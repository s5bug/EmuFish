<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:emufish="using:EmuFish"
        xmlns:view="using:EmuFish.Views"
        xmlns:vm="using:EmuFish.ViewModels"
        x:Class="EmuFish.Views.MainWindow"
        Icon="/Assets/emufish-logo.ico">
        
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        
        <TextBlock DockPanel.Dock="Bottom">No Core Loaded.</TextBlock>
        
        <!-- I don't know why I need to change the margin here, but at least on Windows I do -->
        <view:OpenGlControl Margin="0,-16,0,16" />
    </DockPanel>
    
</Window>
